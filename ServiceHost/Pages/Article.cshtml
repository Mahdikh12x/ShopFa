@page "{id}"
@model ServiceHost.Pages.ArticleModel
@{
    ViewData["title"] = @Model.Article?.Title;
    ViewData["metaDescription"] = @Model.Article?.MetaDescription;
    ViewData["keywords"] = @Model.Article?.Keywords;
    ViewData["canonical"] = @Model.Article?.CanonicalAddress;
}
<div class="breadcrumb-area section-space--half">
        <div class="container wide">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-wrapper breadcrumb-bg">
                        <div class="breadcrumb-content">
                            <h2 class="breadcrumb-content__title">@Model.Article.Title</h2>
                            <ul class="breadcrumb-content__page-map">
                                <li>
                                    <a asp-page="/Index">خانه</a>
                                </li> 
                                <li>
                                    <a asp-page="/ArticleCategory " asp-route-id="@Model.Article.CategorySlug">@Model.Article.CategoryName</a>
                                </li>
                                <li class="active">@Model.Article.Title</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    <div class="page-content-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-wrapper">
                        <div class="page-content-wrapper">
                            <div class="row">
                                <div class="col-lg-9 order-1 order-lg-1">
                                    <div class="blog-page-content">
                                        <div class="blog-single-post-container">
                                            <h3 class="post-title">@Model.Article.Title</h3>
                                            <div class="post-meta">
                                                <p>
                                                    <span><i class="fa fa-user-circle"></i> پست شده توسط: </span> <a
                                                        href="#">admin</a> <span class="separator">|</span> <span><i
                                                            class="fa fa-calendar"></i> در تاریخ: <a href="#">@Model.Article.PublishDate</a></span>
                                                </p>
                                            </div>
                                            <div class="single-blog-post-media">
                                                <div class="image">
                                                    <img src="~/UploadPictures/@Model.Article.Picture" class="img-fluid" alt="@Model.Article.PictureAlt"
                                                         title="@Model.Article.PictureTitle">
                                                </div>
                                            </div>
                                            <div class="post-content">
                                            @Html.Raw(@Model.Article.Body)
                                            </div>
                                            <div class="tag-area">
                                                <span>تگ ها : </span>
                                                <ul>
                                                   
                                                   @foreach (var tag in Model.Article.KeywordList)
                                                   {
                                                       <li><a asp-page="/Search" asp-route-value="@tag"> @tag </a>,</li>
                                                   } 
                                                </ul>
                                            </div>
                                            <div class="social-share-buttons">
                                                <h3>به اشتراک بگذارید</h3>
                                                <ul>
                                                    <li>
                                                        <a class="twitter" href="#">
                                                            <i class="fa fa-twitter"></i>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="facebook" href="#">
                                                            <i class="fa fa-facebook"></i>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="google-plus" href="#">
                                                            <i class="fa fa-google-plus"></i>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="pinterest" href="#">
                                                            <i class="fa fa-pinterest"></i>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="comment-section">
                                            <h3 class="comment-counter">4 COMMENTS</h3>

                                            <!--=======  comment container  =======-->

                                            <div class="comment-container">
                                                <!--=======  single comment  =======-->

                                                <div class="single-comment">
                                                    <span class="reply-btn">
                                                        <a href="#">Reply</a>
                                                    </span>

                                                    <div class="image">
                                                        <img src="assets/img/blog/comment-icon.png" alt="">
                                                    </div>
                                                    <div class="content">
                                                        <h3 class="user">admin <span class="comment-time">April 28, 2019
                                                                at 3:09 am</span></h3>
                                                        <p class="comment-text">Lorem ipsum dolor sit amet consectetur
                                                            adipisicing elit. Sint quia rem dolorem et rerum est
                                                            laudantium eum dolores omnis perspiciatis.</p>
                                                    </div>

                                                </div>

                                                <!--=======  End of single comment  =======-->
                                                <!--=======  single reply comment  =======-->

                                                <div class="single-comment reply-comment">
                                                    <span class="reply-btn">
                                                        <a href="#">Reply</a>
                                                    </span>

                                                    <div class="image">
                                                        <img src="assets/img/blog/comment-icon.png" alt="">
                                                    </div>
                                                    <div class="content">
                                                        <h3 class="user">admin <span class="comment-time">April 28, 2019
                                                                at 3:09 am</span></h3>
                                                        <p class="comment-text">Lorem ipsum dolor sit amet consectetur
                                                            adipisicing elit. Sint quia rem dolorem et rerum est
                                                            laudantium eum dolores omnis perspiciatis.</p>
                                                    </div>

                                                </div>

                                                <!--=======  End of single reply comment  =======-->
                                                <!--=======  single comment  =======-->

                                                <div class="single-comment">
                                                    <span class="reply-btn">
                                                        <a href="#">Reply</a>
                                                    </span>

                                                    <div class="image">
                                                        <img src="assets/img/blog/comment-icon.png" alt="">
                                                    </div>
                                                    <div class="content">
                                                        <h3 class="user">admin <span class="comment-time">April 28, 2019
                                                                at 3:09 am</span></h3>
                                                        <p class="comment-text">Lorem ipsum dolor sit amet consectetur
                                                            adipisicing elit. Sint quia rem dolorem et rerum est
                                                            laudantium eum dolores omnis perspiciatis.</p>
                                                    </div>

                                                </div>

                                                <!--=======  End of single comment  =======-->


                                            </div>

                                            <!--=======  End of comment container  =======-->
                                            <!--=======  comment form container  =======-->

                                            <div class="comment-form-container">
                                                <h3 class="comment-form-title">LEAVE A REPLY</h3>
                                                <p>Your email address will not be published. Required fields are marked
                                                    *</p>

                                                <!--=======  comment form  =======-->

                                                <div class="comment-form">
                                                    <form action="#">
                                                        <div class="row">
                                                            <div class="col-lg-12">
                                                                <div class="form-group">
                                                                    <label>Comment</label>
                                                                    <textarea name="commentMessage"
                                                                        id="commentMessage"></textarea>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-4">
                                                                <div class="form-group">
                                                                    <label>Name <span class="required">*</span></label>
                                                                    <input type="text" name="commenterName">
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-4">
                                                                <div class="form-group">
                                                                    <label>Email <span class="required">*</span></label>
                                                                    <input type="text" name="commenterEmail">
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-4">
                                                                <div class="form-group">
                                                                    <label>Website</label>
                                                                    <input type="text" name="commenterWebsite">
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-12">
                                                                <button type="submit" class="comment-btn"
                                                                    name="submit">post comment</button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>

                                                <!--=======  End of comment form  =======-->
                                            </div>

                                            <!--=======  End of comment form container  =======-->
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 order-2 order-lg-2">
                                    <div class="page-sidebar-wrapper">
                                    @await Component.InvokeAsync("ArticleCategoriesList")

                                    @await Component.InvokeAsync("RecentPost")
                                    <div class="single-sidebar-widget">
                                            <h4 class="single-sidebar-widget__title">Recent Comments</h4>
                                            <div class="block-container">
                                                <div class="single-block comment-block d-flex">
                                                    <div class="image">
                                                        <a href="blog-post-image-format.html">
                                                            <img src="assets/img/blog/comment-icon.png"
                                                                class="img-fluid" alt="">
                                                        </a>
                                                    </div>
                                                    <div class="content">
                                                        <p>
                                                            <span>Admin Says</span> <a
                                                                href="blog-post-image-format.html">The biggest lie in
                                                                plant</a>
                                                        </p>
                                                    </div>
                                                </div>

                                                <!--=======  End of single block  =======-->
                                                <!--=======  single block  =======-->

                                                <div class="single-block comment-block d-flex">
                                                    <div class="image">
                                                        <a href="blog-post-image-gallery.html">
                                                            <img src="assets/img/blog/comment-icon.png"
                                                                class="img-fluid" alt="">
                                                        </a>
                                                    </div>
                                                    <div class="content">
                                                        <p>
                                                            <span>Admin Says</span><a
                                                                href="blog-post-image-gallery.html">How to improve plant
                                                                quality</a>
                                                        </p>
                                                    </div>
                                                </div>

                                                <!--=======  End of single block  =======-->
                                                <!--=======  single block  =======-->

                                                <div class="single-block comment-block d-flex">
                                                    <div class="image">
                                                        <a href="blog-post-audio-format.html">
                                                            <img src="assets/img/blog/comment-icon.png"
                                                                class="img-fluid" alt="">
                                                        </a>
                                                    </div>
                                                    <div class="content">
                                                        <p>
                                                            <span>Admin Says</span><a
                                                                href="blog-post-audio-format.html">101 ideas for
                                                                plant</a>
                                                        </p>
                                                    </div>
                                                </div>

                                                <!--=======  End of single block  =======-->
                                                <!--=======  single block  =======-->

                                                <div class="single-block comment-block d-flex">
                                                    <div class="image">
                                                        <a href="blog-post-video-format.html">
                                                            <img src="assets/img/blog/comment-icon.png"
                                                                class="img-fluid" alt="">
                                                        </a>
                                                    </div>
                                                    <div class="content">
                                                        <p>
                                                            <span>Admin Says</span><a
                                                                href="blog-post-video-format.html">No more mistakes with
                                                                plant</a>
                                                        </p>
                                                    </div>
                                                </div>

                                                <!--=======  End of single block  =======-->

                                            </div>

                                            <!--=======  End of block container  =======-->
                                        </div>
                                        <div class="single-sidebar-widget">
                                            <h4 class="single-sidebar-widget__title">تگ ها </h4>
                                            <ul class="single-sidebar-widget__tag-list">
                                           @foreach (var tag in Model.Article.KeywordList)
                                           {
                                               <li>
                                                   <a asp-page="/Search" asp-route-value="@tag">@tag</a>
                                               </li>
                                           }    
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
